{
  "channel": "{{ channel }}",
  "username": "{{ username }}",
  "icon_emoji": ":door:",
  "link_names": 1,
  "attachments": [
{% if open_link is None %}
        {
            "title": "{{ text }}",
            "color": "#36a64f",
            "fallback": "{{ text }}"
        }
{% else %}
        {
            "pretext": "{{ text }}",
            "color": "#3AA3E3",
            "fallback": "{{ open_link }}",
            "actions": [
                {
                    "type": "button",
                    "text": "----> Open Door <----",
                    "url": "{{ open_link }}"
                }
            ]
        }
{% end %}
  ]
}