{
  "channel": "{{ channel }}",
  "username": "{{ username }}",
  "icon_emoji": ":door:",
  "link_names": 1,
  "attachments": [
{% try %}{% if kwargs['day_result'] %}
    {
      "pretext": "*DOOR HERO* OF THE *DAY* :yellow_heart:",
      "color": "#ff0000",
      "fallback": "HERO OF THE DAY"
    },
{% end%}
{% for hero in kwargs['day_result'] %}
    {
      "title": "{{ hero[0] }}",
      "text": "opened {{ hero[1] }} times",
      "color": "#36a64f",
      "fallback": "{{ hero[0] }} opened {{ hero[1] }} times"
    },
{% end%}{% except %}{% end%}
{% try %}{% if kwargs['week_result'] %}
    {
      "pretext": "*DOOR HEROES* OF THE *WEEK* :orange_heart:",
      "color": "#ff0000",
      "fallback": "HERO OF THE DAY"
    },
{% end%}
{% for hero in kwargs['week_result'] %}
    {
      "title": "{{ hero[0] }}",
      "text": "opened {{ hero[1] }} times",
      "color": "#36a64f",
      "fallback": "{{ hero[0] }} opened {{ hero[1] }} times"
    },
{% end%}{% except %}{% end%}
{% try %}{% if kwargs['month_result'] %}
    {
      "pretext": "*DOOR HEROES* OF THE *MONTH* :heart:",
      "color": "#ff0000",
      "fallback": "HERO OF THE DAY"
    },
{% end%}
{% for hero in kwargs['month_result'] %}
    {
      "title": "{{ hero[0] }}",
      "text": "opened {{ hero[1] }} times",
      "color": "#36a64f",
      "fallback": "{{ hero[0] }} opened {{ hero[1] }} times"
    },
{% end%}{% except %}{% end%}
  ]
}